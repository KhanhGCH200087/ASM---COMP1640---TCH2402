<!-- edit.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student</title>
</head>
<body>
    <h1>Edit Student</h1>
    <form action="/student/edit/{{student._id}}" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{student.name}}" required><br>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" value="{{formatDate student.dob}}" required><br>

        <label for="role">Role:</label>
        <select id="role" name="role" required>
            {{#each roleList}}
                <option value="{{_id}}" {{#ifCond ../student.role._id _id}}selected{{/ifCond}}>{{role}}</option>
            {{/each}}
        </select><br>

        <label for="faculty">Faculty:</label>
        <select id="faculty" name="faculty" required>
            {{#each facultyList}}
                <option value="{{_id}}" {{#ifCond ../student.faculty._id _id}}selected{{/ifCond}}>{{name}}</option>
            {{/each}}
        </select><br>

        <label for="gender">Gender:</label>
        <input type="text" id="gender" name="gender" value="{{student.gender}}" required><br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="{{student.address}}" required><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{student.email}}" required><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" value="{{student.password}}" required><br>

        <label for="image">Image:</label>
        <input type="file" id="image" name="image"><br>

        <button type="submit">Update Student</button>
    </form>
</body>
</html>
